-- SUPPRESSION DE LA TABLE EMPLOYE
  DROP TABLE EMPLOYE;
  COMMIT;
-- CREATION DE LA TABLE EMPLOYE
  CREATE TABLE EMPLOYE
  (MAT      CHAR(3)
   NOM      CHAR(7)
   NOD      CHAR(3)
   DAT      DATE
   SAL      DECIMAL(7,2) NOT NULL,
   COM      DECIMAL(7,2));
COMMIT;
-- ALIMENTATION DE LA TABLE EMPLOYE
  INSERT INTO EMPLOYE VALUES
  ('10','DURAND','E10','2000-02-10',11000,5000);
  INSERT INTO EMPLOYE VALUES
  ('20','DUPOND','P01','1998-01-11',15100.50,NULL);
  INSERT INTO EMPLOYE VALUES
  ('30','BARI','P02','2001-01-04',6000.00,3000);
  INSERT INTO EMPLOYE VALUES
  ('40','JAVA','C04','2005-12-03',21000.50,1000.50);
  INSERT INTO EMPLOYE VALUES
  ('50','CICS','P02','2006-06-20',8500,3500.50);
  INSERT INTO EMPLOYE VALUES
  ('60','PARIS','P01','2008-04-22',9000,3500);
  INSERT INTO EMPLOYE VALUES
  ('70','NOEL','P02','2007-05-18',10500,900.50);
  COMMIT;
-- AFFICHAGE DU CONTENU DE LA TABLE
  SELECT * FROM EMPLOYE;
-- SUPPRESSION DE LA TABLE DEPARTEMENT
  DROP TABLE DEPARTEMENT;
  COMMIT;
-- CREATION DE LA TABLE DEPARTEMENT
  CREATE TABLE DEPARTEMENT
(NOD      CHAR(3)
 NDE      CHAR(6)
 LIE      CHAR(4)
 CHE      CHAR(3)
COMMIT;
NOT NULL,
